@startuml Диаграмма контейнеров

' C4
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml
' Sprites
!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
!includeurl ICONURL/common.puml

' limit text width
skinparam wrapWidth 250
skinparam wrapMessageWidth 200

'
title "MeggatechInsider. Диаграмма контейнеров"


' Personas 
Person(personUser, "Пользователь", "Просматривает, изменяет данные документации.")


System_Boundary(systemRecipe, "Веб-приложение для работы с документацией") {

    Container(clientWebApp, "Веб-интерфейс", "Chrome 80+, Safari 12+; SPA на ReactJS", "Предоставляет интерфейс для просмотра, редактирование данных документации")
        personUser --> clientWebApp : "Просмотр, изменение документации"

    Container(serviceBackendApp, "Сервер", "C#", "Управление логикой получения, изменения, добавления данных.")
        clientWebApp --> serviceBackendApp : "[HTTP; REST]"

    ContainerDb(db, "База данных", "MSSQL", "Данные расписания, отчетности")
        serviceBackendApp --> db : "[Entity]"
}
@enduml
